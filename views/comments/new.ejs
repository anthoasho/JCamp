<% include ../partials/header %>

    <h1 style="text-align: center; margin: 30px 0;">Add a new Comment to <%= campground.name %></h1>
    <div class="row">
        <div style="width: 30%; margin: 30px auto;text-align: center;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text" ></input>
                </div>

                    <button class="btn btn-large btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds"> Go back</a> 
        </div>
    </div>
<% include ../partials/footer %>
