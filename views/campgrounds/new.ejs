<% include ../partials/header %>

    <h1 style="text-align: center; margin: 30px 0;">Create a new campground</h1>
    <div class="row">
        <div style="width: 30%; margin: 30px auto;text-align: center;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name" ></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="Price" min="0.00" step="0.01" ></input>
                </div>
                <div class="form-group">
                     <input class="form-control" type="text" name="image" placeholder="Image url"></input>
                </div>
                <div class="form-group">
                     <input class="form-control" type="text" name="description" placeholder="Description"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds"> Go back</a> 
        </div>
    </div>


<% include ../partials/footer %>
