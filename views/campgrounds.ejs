<% include partials/header %>

<header class="jumbotron">
    <h1>Welcome to the JCamp</h1>
    <p>View our campgrounds from around Japan</p>
    <p> <a class="btn btn-primary btn-large" href="/campgrounds/new"> Add a new campground</a></p>
</header>


<div class="row">
    <div class="col-lg-12">
        <h3>Our most popular sites</h3>
    </div>
</div>
<div class="row" style="display:flex; flex-wrap: wrap;">
            <% campgrounds.forEach(function(campground){ %>

               <div class="col-sm-6 col-md-3" >
                   <div class="img-thumbnail">
                        <img style="width: 250px;" src="<%= campground.image %>">
                         <h4> <%= campground.name %>  </h4>
                   </div>

                </div>
                   <% }) %>
</div>




            </div>


<% include partials/footer %>
